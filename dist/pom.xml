<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.citizensnpcs</groupId>
        <artifactId>citizens-parent</artifactId>
        <version>2.0.39-SNAPSHOT</version>
    </parent>
    <artifactId>citizens</artifactId>
    <packaging>pom</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>${maven-assembly-plugin.version}</version>
                <executions>
                    <execution>
                        <id>package-all</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <!-- Имя финального файла -->
                            <finalName>Citizens-${CITIZENS_VERSION}-b${BUILD_NUMBER}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>

                            <!-- Descriptor теперь лежит в текущем модуле -->
                            <descriptors>
                                <descriptor>src/main/assembly/all-jar.xml</descriptor>
                            </descriptors>

                            <!-- Манифест финального JAR -->
                            <archive>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                </manifest>
                                <manifestEntries>
                                    <paperweight-mappings-namespace>spigot</paperweight-mappings-namespace>
                                    <Implementation-Title>Citizens</Implementation-Title>
                                    <Implementation-Version>${CITIZENS_VERSION}-b${BUILD_NUMBER}
                                    </Implementation-Version>
                                    <Build-Number>${BUILD_NUMBER}</Build-Number>
                                    <Build-Commit>${env.GITHUB_SHA}</Build-Commit>
                                    <Built-By>GitHubActions</Built-By>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven-deploy-plugin.version}</version>
                <executions>
                    <execution>
                        <id>default-deploy</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
